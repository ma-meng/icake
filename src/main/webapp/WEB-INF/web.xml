<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <!--配置加载根目录的监听器-->
    <listener>
        <listener-class>com.ma.icake.global.CatalogTreeListener</listener-class>
    </listener>
    <!--配置字符编码过滤器-->
    <filter>
        <filter-name>encoding</filter-name>
        <filter-class>com.ma.icake.global.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>encoding</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!--配置登录过滤器-->
    <filter>
        <filter-name>Login</filter-name>
        <filter-class>com.ma.icake.global.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Login</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>
    <!--配置核心控制器-->
    <servlet>
        <servlet-name>GlobalServlet</servlet-name>
        <servlet-class>com.ma.icake.global.GlobalController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GlobalServlet</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>
</web-app>